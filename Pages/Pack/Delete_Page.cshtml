@page "{id:int}"
@model PokedexBackOffice.Pages.Packs.DeleteModelPack

<h1>Delete Pack</h1>

<h4>Are you sure you want to delete this Pack?</h4>
<div>
    <h4>@Model.Pack.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Pack.Name
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Pack.Price
        </dd>
        <dt class="col-sm-2">
            Bronze Chance
        </dt>
        <dd class="col-sm-10">
            @Model.Pack.BronzeChance
        </dd>
        <dt class="col-sm-2">
            Silver Chance
        </dt>
        <dd class="col-sm-10">
            @Model.Pack.SilverChance
        </dd>
        <dt class="col-sm-2">
            Gold Chance
        </dt>
        <dd class="col-sm-10">
            @Model.Pack.GoldChance
        </dd>
        <dt class="col-sm-2">
            Platinum Chance
        </dt>
        <dd class="col-sm-10">
            @Model.Pack.PlatinumChance
        </dd>
        <dt class="col-sm-2">
            Diamond Chance
        </dt>
        <dd class="col-sm-10">
            @Model.Pack.DiamondChance
        </dd>
        <dt class="col-sm-2">
            Total Bought
        </dt>
        <dd class="col-sm-10">
            @Model.Pack.TotalBought
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Pack.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
