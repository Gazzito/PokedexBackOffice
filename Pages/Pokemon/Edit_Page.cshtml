@page "{id:int}"
@model PokedexBackOffice.Pages.Pokemons.EditModelPokemon

<h1>Edit Pokemon</h1>

<h4>Pokemon</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Pokemon.Id" />
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Pokemon.Name" class="control-label"></label>
                        <input asp-for="Pokemon.Name" class="form-control" />
                        <span asp-validation-for="Pokemon.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pokemon.RegionId" class="control-label"></label>
                        <select asp-for="Pokemon.RegionId" class="form-control" asp-items="Model.Regions"></select>
                        <span asp-validation-for="Pokemon.RegionId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pokemon.BaseAttackPoints" class="control-label"></label>
                        <input asp-for="Pokemon.BaseAttackPoints" class="form-control" />
                        <span asp-validation-for="Pokemon.BaseAttackPoints" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Pokemon.BaseHealthPoints" class="control-label"></label>
                        <input asp-for="Pokemon.BaseHealthPoints" class="form-control" />
                        <span asp-validation-for="Pokemon.BaseHealthPoints" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pokemon.BaseDefensePoints" class="control-label"></label>
                        <input asp-for="Pokemon.BaseDefensePoints" class="form-control" />
                        <span asp-validation-for="Pokemon.BaseDefensePoints" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Pokemon.BaseSpeedPoints" class="control-label"></label>
                        <input asp-for="Pokemon.BaseSpeedPoints" class="form-control" />
                        <span asp-validation-for="Pokemon.BaseSpeedPoints" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mt-4">
                        <label asp-for="Upload" class="control-label"></label>
                        <input id="fileUpload" asp-for="Upload" class="form-control-file" type="file" />
                        <span asp-validation-for="Upload" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 mw-50">
                        <img id="previewImage" src="data:image/png;base64,@Model.Pokemon.Image" alt="Preview" class="img-thumbnail" style="display:@(string.IsNullOrEmpty(Model.Pokemon.Image) ? "none" : "block");" />
                    </div>
                </div>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('#fileUpload').change(function() {
                var input = this;
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#previewImage').attr('src', e.target.result);
                        $('#previewImage').show();
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            });
        });
    </script>
}
