@page "{id:int}"
@model PokedexBackOffice.Pages.Regions.DeleteModel

<h1>Delete Region</h1>

<h4>Are you sure you want to delete this region?</h4>
<div>
    <h4>Region</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Region.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Region.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Region.Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
